---
interface Videos {
  title: string;
  image: string;
  url: string;
  client: string;
}
import { videos } from '@cv';
import { Icon } from "astro-icon/components";
---
<section class="videos max-w-screen-2xl mx-auto p-2" id="videos">
  <h3 class="uppercase text-pretty">Producci√≥n audiovisual</h3>
  <div class="grid md:grid-cols-5 gap-4">
    {
      videos.map(
        ({ title, image, url, client }) => {
          return (
            <a href={url} target="_blank">
              <article class="proyects__card rounded-xl overflow-hidden border border-slate-900 shadow-xl group relative h-full" >
