---
interface Skills {
  icon: string;
  skill: string;
}
import { skills } from '@cv';
import { Icon } from "astro-icon/components";
---
<section class="habilidades max-w-screen-xl mx-auto p-2 my-10" id="habilidades">
  <h3 class="uppercase text-pretty">Habilidades IT</h3>
  <div class=" text-white flex flex-wrap gap-1 bg-red p-5 max-w-screen-sm mx-auto rounded-3xl shadow-2xl">
    {
      skills.map(
        ({ icon, skill }) => {
          return (
            <article class="rounded-full flex flex-row items-center justify-center border border-dark px-3 xl:py-1 gap-1">
              <Icon class="xl:size-5" name={icon} /><span>{skill}</span>
            </article>
          );
        }
      )
    }
  </div>
</section>
